{
  "name": "tidy-ui",
  "private": true,
  "scripts": {
    "bootstrap": "npx lerna bootstrap && yarn install && npx husky install",
    "build": "npx lerna exec -- yarn build",
    "clean": "rimraf -rf coverage && npx lerna exec -- yarn clean",
    "dev": "start-storybook -p 5555",
    "format": "npx lerna exec -- yarn format",
    "generate": "plop --plopfile internals/generators/index.js",
    "lint-fix": "yarn lint:md && npx lerna exec -- yarn lint-fix",
    "lint:md": "markdownlint-cli2-fix \"**/*.md\" \"#**/node_modules/**\"",
    "reset": "yarn clean && npx lerna exec -- yarn reset && rimraf -rf node_modules",
    "test": "yarn \"test:coverage\"",
    "test:coverage": "jest --bail --coverage --passWithNoTests",
    "test:update": "jest --bail --coverage --passWithNoTests -u",
    "ver": "npx lerna version",
    "vet": "npx lerna exec -- yarn lint",
    "yalc:publish": "npx lerna exec -- yarn yalc:publish",
    "yalc:push": "npx lerna exec -- yarn yalc:push"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@commitlint/config-lerna-scopes": "^14.0.0",
    "@lerna/link": "^4.0.0",
    "@storybook/addon-a11y": "^6.5.9",
    "@storybook/addon-docs": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addons": "^6.5.9",
    "@storybook/builder-webpack5": "^6.5.9",
    "@storybook/manager-webpack5": "^6.5.9",
    "@storybook/react": "^6.5.9",
    "@storybook/theming": "^6.5.9",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^28.1.2",
    "@types/node": "^16.11.6",
    "@types/react-test-renderer": "^16.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.3",
    "babel-plugin-styled-components": "^1.13.3",
    "husky": "^7.0.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.3",
    "jest-haste-map": "^27.3.1",
    "jest-resolve": "^27.3.1",
    "jest-styled-components": "^7.0.5",
    "lerna": "^4.0.0",
    "markdownlint-cli2": "^0.4.0",
    "plop": "^2.7.6",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "rollup-plugin-typescript2": "^0.32.1",
    "storybook-addon-styled-component-theme": "^2.0.0",
    "storybook-dark-mode": "^1.1.0",
    "styled-components": "^5.3.3",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4",
    "webpack": "^5.61.0",
    "yalc": "^1.0.0-pre.53"
  },
  "peerDependencies": {},
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.0"
}
