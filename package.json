{
  "name": "tidy-ui",
  "private": true,
  "scripts": {
    "build": "lerna exec -- yarn build",
    "clean": "lerna exec --parallel -- yarn clean",
    "format": "lerna exec --parallel -- yarn format",
    "bootstrap": "lerna bootstrap && yarn install",
    "dev": "start-storybook -p 5555",
    "generate": "plop --plopfile internals/generators/index.js",
    "lint-fix": "lerna exec --parallel -- yarn lint-fix",
    "reset": "yarn clean && rimraf -rf node_modules && yarn bootstrap",
    "test": "lerna exec -- yarn test",
    "test:update": "lerna exec --parallel -- yarn test:update",
    "vet": "lerna exec -- yarn vet",
    "yalc:publish": "lerna exec --parallel -- yarn yalc:publish",
    "yalc:push": "lerna exec --parallel -- yarn yalc:push"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@commitlint/config-lerna-scopes": "^14.0.0",
    "@lerna/link": "^4.0.0",
    "@storybook/addon-a11y": "^6.4.0",
    "@storybook/addon-docs": "^6.4.0",
    "@storybook/addon-essentials": "^6.4.0",
    "@storybook/react": "^6.4.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/react-test-renderer": "^16.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.3",
    "babel-plugin-styled-components": "^1.13.3",
    "husky": "^7.0.0",
    "jest": "^27.3.1",
    "jest-haste-map": "^27.3.1",
    "jest-resolve": "^27.3.1",
    "jest-styled-components": "^7.0.5",
    "lerna": "^4.0.0",
    "plop": "^2.7.6",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "styled-components": "^5.3.3",
    "typescript": "^4.4.4",
    "webpack": "^5.61.0",
    "yalc": "^1.0.0-pre.53"
  },
  "peerDependencies": {
    "@tidy-ui/card": "0.0.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
