{
  "name": "tidy-ui",
  "private": true,
  "readme": "README.md",
  "scripts": {
    "bootstrap": "lerna bootstrap && yarn install && husky install",
    "build": "yarn build:pre && yarn build:other",
    "build:other": "lerna run build --ignore @tidy-ui/types --ignore @tidy-ui/commons",
    "build:pre": "lerna run build --scope @tidy-ui/types --scope @tidy-ui/commons",
    "build-storybook": "storybook build",
    "build:md": "markdown-include .markdown.json && lerna exec -- yarn build:md",
    "clean": "rimraf -rf coverage && lerna exec -- yarn clean",
    "dev": "storybook dev -p 5555",
    "format": "prettier \"**/*.{js,jsx,json,yml,yaml,css,less,scss,ts,tsx,md,graphql,mdx}\" --check --loglevel warn",
    "format:fix": "prettier \"**/*.{js,jsx,json,yml,yaml,css,less,scss,ts,tsx,md,graphql,mdx}\" --write --loglevel warn",
    "generate": "plop --plopfile internals/generators/index.js",
    "lint": "eslint . -c .eslintrc --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "yarn format:fix && yarn lint:md && eslint . -c .eslintrc --ext .js,.jsx,.ts,.tsx --fix",
    "lint:md": "markdownlint-cli2-fix \"**/*.md\" \"#**/node_modules/**\" \"#**/CHANGELOG.md\" \"#LICENSE\" \"#**/*/_*.md\" \"#internals/md/**\"",
    "reset": "rimraf -rf storybook-static && yarn clean && lerna exec -- yarn reset && rimraf -rf node_modules",
    "test": "yarn \"test:coverage\"",
    "test:coverage": "jest --bail --coverage --passWithNoTests",
    "test:update": "jest --bail --coverage --passWithNoTests -u",
    "ver": "lerna version",
    "vet": "yarn format && yarn lint",
    "yalc:publish": "lerna run yalc:publish",
    "yalc:push": "lerna run yalc:push"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@commitlint/config-lerna-scopes": "^14.0.0",
    "@lerna/link": "^6.6.2",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@rollup/plugin-replace": "^3.0.1",
    "@rollup/plugin-terser": "^0.4.1",
    "@storybook/addon-a11y": "^7.0.6",
    "@storybook/addon-controls": "^7.0.6",
    "@storybook/addon-docs": "^7.0.6",
    "@storybook/addon-interactions": "^7.0.6",
    "@storybook/addon-mdx-gfm": "7.0.6",
    "@storybook/addon-measure": "^7.0.6",
    "@storybook/addon-storysource": "^7.0.6",
    "@storybook/addon-toolbars": "^7.0.6",
    "@storybook/addon-viewport": "^7.0.6",
    "@storybook/addons": "^7.0.6",
    "@storybook/react": "^7.0.6",
    "@storybook/react-webpack5": "7.0.6",
    "@storybook/theming": "^7.0.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^28.1.2",
    "@types/node": "^16.11.6",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/styled-components": "^5.1.17",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.3",
    "babel-plugin-styled-components": "^1.13.3",
    "eslint": "^8.3.0",
    "eslint-plugin-jsdoc": "^39.3.4",
    "eslint-plugin-jsonc": "^2.3.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-keys": "^2.3.5",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.0",
    "is-ci-cli": "^2.2.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.3",
    "jest-haste-map": "^27.3.1",
    "jest-resolve": "^27.3.1",
    "jest-styled-components": "^7.0.5",
    "lerna": "^7.0.0",
    "markdown-include": "^0.4.3",
    "markdownlint-cli2": "^0.4.0",
    "plop": "^2.7.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rollup": "^2.61.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.34.1",
    "storybook": "7.0.6",
    "storybook-addon-pseudo-states": "^2.0.1",
    "storybook-dark-mode": "^3.0.0",
    "styled-components": "^5.3.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "yalc": "^1.0.0-pre.53"
  },
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.0"
}
