{
  "root": true,
  "env": {
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "react", "simple-import-sort", "typescript-sort-keys", "sort-keys"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jsonc/recommended-with-jsonc"
  ],
  "rules": {
    "sort-keys": 0, // disable default eslint sort-keys
    "sort-keys/sort-keys-fix": 1,
    "@typescript-eslint/no-non-null-assertion": "off",
    "@typescript-eslint/no-var-requires": "off",
    "jsonc/sort-keys": [
      "error",
      "asc",
      {
        "natural": true,
        "minKeys": 2
      }
    ],
    "typescript-sort-keys/interface": ["error", "asc", { "natural": true }],
    "typescript-sort-keys/string-enum": ["error", "asc", { "natural": true }],
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          // Packages `react` related packages come first.
          // Side effect imports.
          ["^react", "^@?\\w", "^\\u0000"],
          // Internal packages.
          ["^(@|components)(/.*|$)"],
          ["^(@tidy-ui)(/.*|$)"],
          // Parent imports. Put `..` last.
          ["^\\.\\.(?!/?$)", "^\\.\\./?$"],
          // Other relative imports. Put same-folder imports and `.` last.
          ["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
          // Style imports.
          ["^.+\\.?(css)$"]
        ]
      }
    ],
    "simple-import-sort/exports": "error"
  }
}
