{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declarationDir": "dist",
    "outDir": "dist",
    "rootDirs": ["src"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "__tests__",
    "stories",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx"
  ]
}
