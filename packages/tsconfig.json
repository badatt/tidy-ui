{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Language and Environment */
    "lib": ["es6", "dom", "es2016", "es2017"],
    "emitDecoratorMetadata": true,
    "jsx": "react",
    /* Modules */
    "baseUrl": "./",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@tidy-ui/icons": ["packages/icons"],
      "@tidy-ui/theme": ["packages/theme"]
    },
    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    /* Projects */
    "composite": true,
    /* JavaScript Support */
    "allowJs": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "references": [{ "path": "packages/icons" }, { "path": "packages/theme" }],
  "exclude": ["node_modules", "dist", "stories", "__tests__"]
}
