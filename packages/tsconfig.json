{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Language and Environment */
    "lib": ["dom", "es2015"],
    "emitDecoratorMetadata": true,
    "jsx": "react",
    /* Modules */
    "resolveJsonModule": true,
    "moduleResolution": "node",
    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    /* Projects */
    "composite": true,
    /* JavaScript Support */
    "allowJs": true,
    /* Completeness */
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "dist", "stories", "test"]
}
