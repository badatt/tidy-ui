{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declarationDir": "build/dist",
    "outDir": "build/dist",
    "rootDirs": ["src"],
    "paths": {
      "@tidy-ui/types": ["../types/src"],
      "@tidy-ui/theme": ["../theme/src"]
    }
  },
  "references": [{ "path": "../types" }, { "path": "../theme" }],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "__tests__", "stories"]
}
