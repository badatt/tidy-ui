{
  "name": "@tidy-ui/commons",
  "version": "0.0.37",
  "scripts": {
    "build": "yarn clean && rollup -c ../../rollup.config.js --environment PACKAGE_NAME:commons",
    "clean": "tsc --build --clean && rimraf -rf dist && rimraf -rf build",
    "format": "prettier \"**/*.{js,jsx,json,yml,yaml,css,less,scss,ts,tsx,md,graphql,mdx}\" --write",
    "lint": "eslint -c ../../.eslintrc --ext .js,.jsx,.ts,.tsx src",
    "lint-fix": "yarn format && eslint -c ../../.eslintrc --ext .js,.jsx,.ts,.tsx src --fix",
    "postinstall": "rm -rf node_modules/@types/react-native",
    "reset": "yarn clean && rimraf -rf node_modules",
    "test": "yarn \"test:coverage\"",
    "test:coverage": "jest --bail --coverage --passWithNoTests",
    "test:update": "jest --bail --coverage --passWithNoTests -u",
    "test:watch": "jest --watchAll --verbose",
    "vet": "yarn lint",
    "yalc:publish": "yarn build && yalc publish",
    "yalc:push": "yarn build && yalc push"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@rollup/plugin-replace": "^3.0.1",
    "@types/react": "^16.0.0",
    "@types/styled-components": "^5.1.17",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "is-ci-cli": "^2.2.0",
    "react": "^16.0.0",
    "rollup": "^2.61.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "typescript": "^4.4.4"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "typings": "dist/src/index.d.ts",
  "types": "dist/src/index.d.ts",
  "license": "MIT",
  "description": "tidy-ui react component library; 'commons' package",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ]
}
