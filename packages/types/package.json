{
  "name": "@tidy-ui/types",
  "version": "0.0.1",
  "scripts": {
    "build": "yarn clean && tsc -b tsconfig.json",
    "clean": "tsc --build --clean",
    "format": "prettier \"**/*.{js,jsx,json,yml,yaml,css,less,scss,ts,tsx,md,graphql,mdx}\" --write",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src",
    "lint-fix": "eslint --ext .js,.jsx,.ts,.tsx src --fix",
    "postinstall": "rm -rf node_modules/@types/react-native",
    "test": "is-ci \"test:coverage\"",
    "test:coverage": "jest --bail --coverage --passWithNoTests",
    "test:update": "jest --bail --coverage --passWithNoTests -u",
    "test:watch": "jest --watchAll --verbose",
    "vet": "yarn lint-fix && yarn test:coverage",
    "yalc:publish": "yarn build && yalc publish",
    "yalc:push": "yarn build && yalc push"
  },
  "dependencies": {
    "styled-components": "5.0.0"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.34",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "is-ci-cli": "^2.2.0",
    "react": "^16.0.0",
    "typescript": "^4.4.4"
  },
  "main": "build/dist/index.js",
  "typings": "build/dist/index.d.ts",
  "types": "build/dist/index.d.ts",
  "license": "MIT",
  "description": "tidy-ui react component library; 'types' package",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build/dist/src/*"
  ]
}
