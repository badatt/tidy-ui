{
  "name": "@tidy-ui/types",
  "version": "0.0.1",
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "yarn clean && tsc -b",
    "clean": "tsc --build --clean",
    "format": "prettier \"**/*.{ts,tsx}\" --write",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src",
    "postinstall": "rm -rf node_modules/@types/react-native",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --bail --coverage --passWithNoTests",
    "test:watch": "jest --watchAll --verbose",
    "vet": "yarn lint && yarn test:coverage",
    "yalc:publish": "yarn build && yalc publish",
    "yalc:push": "yarn build && yalc push"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "is-ci-cli": "^2.2.0",
    "typescript": "^4.4.4"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "description": "tidy-ui react component library; 'types' package",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.ts?(x)": [
      "eslint --fix",
      "git add",
      "jest --findRelatedTests"
    ],
    "*.(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)": [
      "prettier --write",
      "git add"
    ]
  }
}
